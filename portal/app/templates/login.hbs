<div class='wrapper-page'>
   <div class='text-center'>
      <a class='logo-lg'><i class=''></i> <span>{{t 'title'}}</span> </a>
   </div>
   <form class='form-horizontal m-t-20' action='index.html'>
      <div class='form-group'>
         <div class='col-xs-12'>
            {{input class='form-control' type='text' required='' placeholder=(t 'login_page.username') value=username}}
            <i class='md md-account-circle form-control-feedback l-h-34'></i>
         </div>
      </div>
      <div class='form-group'>
         <div class='col-xs-12'>
            {{input class='form-control' type='password' required='' placeholder=(t 'login_page.password') value=password}}
            <i class='md md-vpn-key form-control-feedback l-h-34'></i>
         </div>
      </div>
      <div class='form-group text-right m-t-20'>
         <div class='col-xs-12'>
            <button class='btn btn-custom btn-black w-md waves-effect waves-light' type='submit' style='font-size:1.3rem'{{action 'authenticate'}}>{{t 'login_page.sign_in'}}
            </button>
         </div>
      </div>
   </form>
</div>
